<div class="form-horizontal">
  <%= form_for([@issue, @issue.comments.build], :remote=> true) do |f| %>
    <div class="control-group">
      <%= f.label :commenter, class: "control-label" %><br />
      <%= f.text_field :commenter, class: "controls", style: "width: 266px;" %>
    </div>
    <div class="control-group">
      <%= f.label :body, class: "control-label" %><br />
      <%= f.text_area :body, class: "controls", rows: "10", style: "width: 266px;" %>
    </div>
    <div class="form-actions">
      <%= f.submit class: 'btn' %>
    </div>
  <% end %>
</div>
