<table class="table table-striped" id="comment_<%= comment.id %>">
  <thead>
    <tr class="row">
      <th>Commenter</th>
      <th>Comment</th>
    </tr>
  </thead>
  <tbody>
    <tr class="row">
      <td class="span5"><%= comment.commenter %></td>
      <td class="span5"><%= comment.body %></td>
      <td><%= link_to 'Destroy', [comment.issue, comment],
               method: :delete, remote: true,
               data: { confirm: 'Are you sure?' }, class: 'btn btn-mini btn-danger' %></td>
    </tr>
  </tbody>
</table>





