<div class="form-horizontal">
  <%= form_for(@issue) do |f| %>
    <% if @issue.errors.any? %>
      <div id="error_explanation" class="alert alert-error">
        <h2><%= pluralize(@issue.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% @issue.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <div class="control-group">
      <%= f.label :title, class: "control-label" %><br />
      <%= f.text_field :title, class: "controls", style: "width: 266px;" %>
    </div>
    <div class="control-group">
      <%= f.label :description, class: "control-label" %><br />
      <%= f.text_area :description, class: "controls", rows: "10", style: "width: 266px;" %>
    </div>
    <div class="control-group">
      <%= f.label :no_followers, class: "control-label" %><br />
      <%= f.number_field :no_followers, class: "controls", style: "width: 266px;" %>
    </div>
    <div class="form-actions">
      <%= f.submit "Submit", class: 'btn' %>
    </div>
  <% end %>
</div>
