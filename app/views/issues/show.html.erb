<div class="row">
  <!-- <p id="notice"><%= notice %></p> -->

  <div class="span2">
    <%= link_to 'Edit', edit_issue_path(@issue), class: 'btn' %> |
    <%= link_to 'Back', issues_path, class: 'btn' %>
  </div>

  <div class="span10">
    <div class="page-header">
      <h1>Post</h1>
    </div>

    <p>
      <b>Title:</b>
      <%= @issue.title %>
    </p>

    <p>
      <b>Description:</b>
      <%= @issue.description %>
    </p>

    <p>
      <b>No followers:</b>
      <%= @issue.likes.count %>
    </p>

    <p>
      <b>No Comments:</b>
      <%= @issue.comments.count %>
    </p>

    <%- if current_user.present? %>
      <div id="like">
        <%= render 'likes/like_button', :issue => @issue %>
      </div>
    <%- end %>

    <h2>Comments</h2>

    <%- if current_user.present? %>
      <table class="table table-striped">
        <thead>
          <tr class="row">
            <th class="span5">Commenter</th>
            <th class="span6">Comment</th>
          </tr>
        </thead>
        <tbody id="comments">
          <%= render @issue.comments %>
        </tbody>
      </table>
      <h2>Add a comment:</h2>
      <%= render "comments/form" %>
    <%- else %>
      <h4><%= link_to "Login...,", new_user_session_path %> to follow and comment for this post.</h4>
    <%- end %>
  </div>
</div>
